<UserControl x:Class="MTM_RE_160.Elements.ButtonSelectContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MTM_RE_160.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" BorderBrush="#FFD8D8D8" BorderThickness="1" Padding="0" Margin="10">
    <UserControl.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#B2CFCACA" Offset="0.5"/>
            <GradientStop Color="#B2F5EFEF" Offset="1"/>
            <GradientStop Color="#B2F5F5F5"/>
        </LinearGradientBrush>
    </UserControl.Background>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="100*" MinHeight="24"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textBlock" TextAlignment="Center" Text="textBlock" Grid.Row="0" VerticalAlignment="Center"/>
        <UniformGrid x:Name="grid" Grid.Row="1" >
            
        </UniformGrid>

    </Grid>
</UserControl>
